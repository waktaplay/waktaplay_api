{
    "apps": [
      {
        "script": "./dist/index.js",
        "instances": 1,
        "exec_mode": "cluster",
        "name": "waktaplay_music_api",
        "wait_ready": true,
        "listen_timeout": 10000,
        "kill_timeout": 5000,
        "env": {
          "CLUSTER": "primary"
        }
      },
      {
        "script": "./dist/index.js",
        "instances": -1,
        "exec_mode": "cluster",
        "name": "waktaplay_music_api",
        "wait_ready": true,
        "listen_timeout": 10000,
        "kill_timeout": 5000,
        "env": {
          "CLUSTER": "replica"
        }
      }
    ]
}